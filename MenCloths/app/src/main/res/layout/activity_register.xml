<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login"
   >
    <EditText
        android:id="@+id/tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="|  我的手机号码"
        android:textColorHint="#ffffff"
        android:drawableLeft="@mipmap/my_white"
        android:layout_gravity="center"
        android:padding="20dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="50dp"
        android:textSize="12dp"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"/>
    <EditText
        android:id="@+id/passwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="|  我的密码"
        android:textColorHint="#ffffff"
        android:drawableLeft="@mipmap/lock_white"
        android:layout_gravity="center"
        android:padding="20dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textSize="12dp"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="|  验证码"
            android:textColorHint="#ffffff"
            android:drawableLeft="@mipmap/lock_white1"
            android:layout_gravity="center"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:layout_marginLeft="35dp"
            android:textSize="12dp"
            android:background="@null"
            android:id="@+id/verification" />

        <TextView
            android:id="@+id/get_verifications_tel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:padding="16dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/thume_green"/>

    </LinearLayout>

    <TextView
    android:id="@+id/textview_register_register"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="35dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="35dp"
    android:text="注册"
    android:gravity="center"
    android:textColor="#ffffff"
    android:padding="10dp"
    android:background="@drawable/thume_pink"/>

</LinearLayout>
