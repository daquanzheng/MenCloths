<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_show_title_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_show_title_img1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/home_show_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="戴手表的兔子"
                android:layout_margin="12dp"
                android:drawableLeft="@drawable/show_circle"
                android:gravity="center_vertical"
                android:drawablePadding="3dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/home_show_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入秋了，好好爱自己"
                android:layout_marginLeft="12dp"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/home_show_part_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_show_part_img1"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/home_show_part_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_show_part_img2"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="12dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>