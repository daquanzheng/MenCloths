<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/hot_seller_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/home_hotseller_shirt1"
            android:scaleType="centerCrop"
            android:layout_margin="12dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/hot_seller_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/hot_seller_item_title1"
                android:layout_marginTop="18dp"
                android:textSize="14sp"
                android:textColor="@color/black_model"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/hot_seller_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ï¿¥ 299.00"
                android:textColor="@color/green_bg"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>