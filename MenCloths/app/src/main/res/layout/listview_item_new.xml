<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/new_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/new_coat"
                android:scaleType="centerCrop"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/new_text_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="长款连帽毛呢大衣"
                android:textColor="@color/black_model"
                android:textSize="16sp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/new_text_price1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥889.00"
                android:textColor="@color/black_model"
                android:textSize="16sp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/new_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/new_shirt"
                android:scaleType="centerCrop"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="18dp"/>
            <TextView
                android:id="@+id/new_text_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="灯芯绒纯棉长袖衬衫"
                android:textColor="@color/black_model"
                android:textSize="16sp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/new_text_price2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥219.00"
                android:textColor="@color/black_model"
                android:textSize="16sp"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>