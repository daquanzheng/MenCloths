<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016年，运动系列新品发布\n
运动时尚进阶"
        android:textColor="#111"
        android:textSize="18dp"
        android:paddingTop="25dp"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:id="@+id/title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="vans将时尚，艺术和音乐的元素融合进经典的设计中，为消费者提供多中经得起考验的服装。为你的生活富裕新的色彩。作为标志性的花瓣和冲浪品牌，vanc乐与丰富消费者的穿着打牌一传承我们的经典。"
        android:textColor="#111"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="16sp"
        android:id="@+id/content" />

    <ImageView
        android:id="@+id/zhangwen_suai"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/zhangwen_suai"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VANS\tBIG\tLOGO\tOREW"
        android:gravity="center"
        android:paddingTop="19dp"
        android:id="@+id/logo" />

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_marginTop="15dp"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="点击购买"
           android:background="@drawable/button_trend"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:textColor="#fff"
           android:id="@+id/goumai"
           />
   </LinearLayout>

</LinearLayout>
