<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black_model">
        <ImageView
            android:id="@+id/collocate_item_img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/collocate_img01"
            android:scaleType="centerCrop"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/collocate_img01_text01"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="牛仔夹克外套"
                android:background="@color/white"
                android:textColor="@color/black_model"
                android:drawableTop="@mipmap/collocate_img01_01"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="18dp" />
            <TextView
                android:id="@+id/collocate_img01_text02"
                android:layout_toRightOf="@+id/collocate_img01_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="白色衬衫"
                android:background="@color/white"
                android:textColor="@color/black_model"
                android:drawableTop="@mipmap/collocate_img01_02"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp" />
            <TextView
                android:id="@+id/collocate_img01_text03"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/collocate_img01_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="白色牛仔裤"
                android:background="@color/white"
                android:textColor="@color/black_model"
                android:drawableTop="@mipmap/collocate_img01_03"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/collocate_img01_text04"
                android:layout_toRightOf="@+id/collocate_img01_text03"
                android:layout_below="@+id/collocate_img01_text02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="深蓝色乐福鞋"
                android:background="@color/white"
                android:textColor="@color/black_model"
                android:drawableTop="@mipmap/collocate_img01_04"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="12dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/collocate_item_img2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/collocate_img02"
            android:scaleType="centerCrop"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>