<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_trend_sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_fashion_up"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/trend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年秋冬运动新品速递"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>
        <View
            android:id="@+id/spacing_item_content"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_model"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/trend_item_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="@color/green_bg"
                android:textSize="15sp"
                android:drawableLeft="@mipmap/rating_fashion"
                android:drawablePadding="3dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:id="@+id/trend_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="详情"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_green"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="1.5dp"
                android:paddingRight="1.5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>