<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spacing_simple">
    <EditText
        android:id="@+id/edit_mall"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@color/white"
        android:hint="搜索感兴趣的潮流商品"
        android:textSize="20sp"
        android:drawableLeft="@mipmap/search"
        android:drawablePadding="10dp"
        android:padding="10dp"/>
    <ListView
        android:layout_below="@+id/edit_mall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_mall"></ListView>
    <RadioGroup
        android:id="@+id/home_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black_model"
        android:alpha="0.7"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="首页"
            android:textColor="@color/green_bg"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
        <RadioButton
            android:id="@+id/mall"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@mipmap/mall"
            android:textColor="@color/green_bg"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
        <RadioButton
            android:id="@+id/collocate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="搭配"
            android:textColor="@color/green_bg"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
        <RadioButton
            android:id="@+id/classify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="分类"
            android:textColor="@color/green_bg"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
        <RadioButton
            android:id="@+id/mine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="我的"
            android:textColor="@color/green_bg"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
    </RadioGroup>
</RelativeLayout>