<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/goods_picture"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@mipmap/clothesi"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="马克华菲长袖衬衫男士韩版时尚修身\n纯色亚麻白衬衣潮2016秋装新款"
                android:textColor="#111"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜色："/>
                <TextView
                    android:id="@+id/goods_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白色"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="尺码："/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="XL"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交易成功"
                    android:textColor="#ea9356"
                    android:layout_marginRight="15dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥178.00"
                android:textColor="#f00"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/extra_appraise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="追加评价"
                    android:textColor="#111"
                    android:background="@drawable/check_dingdan"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginRight="12dp" />
                <TextView
                    android:id="@+id/appraise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:text="评价"
                    android:textColor="#fff"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>